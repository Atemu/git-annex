-            (#poke struct timeval, tv_sec)  ptr (utSeconds ut)
-            (#poke struct timeval, tv_usec) ptr (utMicroSeconds ut)
-
 instance Binary UnixTime where
         put (UnixTime (CTime sec) msec) = do
             put sec
